@model IEnumerable<CompanyManagement.Models.UoMCategory>

@{
    ViewBag.Title = "فئات وحدات القياس";
}
<a href="/Unit_of_Measures/Index" style="display:inline;float:left"><i class="fa fa-caret-square-o-left"></i> الرجوع الى وحدات القياس</a>

<h2>فئات وحدات القياس</h2>

<p>
    @Html.ActionLink("إضافة فئة جديدة", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.ActionLink("تعديل", "Edit", new { id = item.id }) |
                @Html.ActionLink("تفاصيل", "Details", new { id = item.id }) |
                @Html.ActionLink("حذف", "Delete", new { id = item.id })
            </td>
        </tr>
    }

</table>
